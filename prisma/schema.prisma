generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String?
  password String
  role     Role

  teacher  Teacher[]

  @@map("users")
}


enum Role {
  admin
  student
  teacher
  parent
}

model Student {
  studentId     Int      @id @default(autoincrement())
  firstName     String
  lastName      String
  gender        String
  dateOfBirth   DateTime
  mobileNumber  String
  address       String
  className     String
  section       String
  rollNumber    String
  admissionDate DateTime
  status        String

  @@map("student")
}

model Subject {
  subjectId Int     @id @default(autoincrement())
  name      String
  teacherId Int
  teacher   Teacher @relation(fields: [teacherId], references: [teacherId])

  @@map("subjects")
}

model Teacher {
  teacherId Int  @id @default(autoincrement())
  userId    Int  
  user      User @relation(fields: [userId], references: [id])

  firstName     String
  lastName      String
  gender        String
  dateOfBirth   DateTime
  mobileNumber  String
  address       String
  qualification String
  experience    Int?
  joiningDate   DateTime
  salary        Float?
  status        String

  subjects  Subject[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("teachers")
}


