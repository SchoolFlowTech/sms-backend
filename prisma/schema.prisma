generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows", "darwin-arm64"]
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int   @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      roles
}

enum roles {
  admin
  student
  teacher
  parent
}

model student {
  studentId Int @id @default(autoincrement())
  firstName String
  lastName String
  gender String
  dateOfBirth String
  mobileNumber String
  address String
  class String
  section String
  rollNumber String
  admissionDate String
  status String

}